header.circle--header(style=!!user && user.hasOwnProperty('banner') && !!user.banner ? `background-image: url(${user.banner}/1500x500)` : '')
  .bounds
    .circle--fluid
      .circle--fluid--cell
        a.logo(href='/')
          include logoSVG.pug
          h1 #{!!user && user.hasOwnProperty('scrName') && !!user.scrName ? '@' + user.scrName : 'no user data returned'}
      .circle--fluid--cell.align-right
        nav
          ul.circle--inline
            li: a Sign Out
