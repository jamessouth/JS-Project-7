mixin Friend(name, user, image, user_id)
  li
    .circle--fluid
      .circle--fluid--cell.circle--fluid--primary
        a.app--tweet--author
          .app--avatar(style=`background-image: url(${image})`)
            img(src=image)
          h4 #{name}
          p #{user}
      .circle--fluid--cell
        form(action="/", method="POST")
          input(type="hidden", name="unfollow_id", value=user_id)
          button.button-primary(type="submit") Unfollow
